<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.7.0" client="site" method="install">
	<name>Kitten Module</name>
	<author>bradparbs</author>
	<creationDate>July 2012</creationDate>
	<copyright>Copyright BradParbs</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>brad@bradparbs.com</authorEmail>
	<authorUrl>www.bradparbs.com</authorUrl>
	<version>0.1</version>
	<description>A module that shows pictures of kittens, much love to PlaceKitten.com</description>
	<files>
		<filename module="mod_kitten">mod_kitten.php</filename>
		<filename>index.html</filename>
		<filename>mod_kitten.xml</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="type"
					type="list"
					default=""
					label="Select a placeholder type"
					description="Select a placeholder type">
					<option value="gray">Boring Gray</option>
					<option value="kitten">Kittens</option>
				</field>
				<field
					name="width"
					type="text"
					default="300"
					label="Width"
					description="The width of the kitten image" />
					description="The width of the placeholder image" />
				<field
					name="height"
					type="text"
					default="300"
					label="Height"
					description="The height of the Kitten image" />
					description="The height of the placeholder image" />
				<field
					name="text"
					type="text"
					default=""
					label="Text (only for boring gray)"
					description="Only used for boring gray, will output text in the placeholder image" />
			</fieldset>
		</fields>
	</config>
</extension>

